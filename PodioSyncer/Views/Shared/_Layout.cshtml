<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PodioSyncer</title>
    <link rel="manifest" href="~/manifest.json" />
    <meta name="description"
          content="Web site for syncing Podio items" />
    <link rel="apple-touch-icon" href="logo192.png" />
    <meta name="theme-color" content="#000000" />
    <link rel="stylesheet" href="~/bundles/css/app.css" asp-append-version="true"/>
</head>
<body style="background-color: #f4f4f4">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PodioSyncer</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @*<ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/bundles/app.js" asp-append-version="true"></script>
    <script>
        var jsonRoutes = {
            getpodioapps: '@Url.Action("GetPodioApps", "Api")',
            createpodioapp: '@Url.Action("CreatePodioApp", "Api")',
            updatepodioapp: '@Url.Action("UpdatePodioApp", "Api")',
            deletepodioapp: '@Url.Action("DeletePodioApp", "Api")',
            syncpodioitem: '@Url.Action("SyncPodioItem", "Api")',
            getlinks: '@Url.Action("GetLinks", "Api")',

        };
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
